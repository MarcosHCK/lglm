PACKAGE_NAME=@PACKAGE_NAME@
top_builddir=@top_builddir@
top_srcdir=@top_srcdir@
srcdir=@srcdir@

#
# Compiler flags
#
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
DEFS=@DEFS@
LIBS=@LIBS@

#
# Obviously pkg-config values
#
LUA_CFLAGS=@LUA_CFLAGS@
LUA_LIBS=@LUA_LIBS@
CGLM_CFLAGS=@CGLM_CFLAGS@
CGLM_LIBS=@CGLM_LIBS@
SHARED_FLAGS=-rpath /usr/local/lib -shared

#
# Some programs we need ...
#
LIBTOOL=@LIBTOOL@
CC=@CC@
LD=@LD@

LGLM_LIB=liblglm.la
LGLM_INC=src/lglm.h

OBJECTS=\
	src/lglm.o \
	src/constructors.o \
	src/camera.o

LTOBJS := $(OBJECTS:.o=.lo)

all: $(LGLM_LIB)

$(LGLM_LIB): $(LTOBJS)
	$(LIBTOOL) --mode=link $(CC) $(LDFLAGS) -o $(LGLM_LIB) $(LTOBJS) $(LUA_LIBS) $(CGLM_LIBS) $(SHARED_FLAGS)

%.lo: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $< $(LUA_CFLAGS) $(CGLM_CFLAGS) $(CFLAGS) -o $@

%.o: %.c
	$(CC) -c $< $(LUA_CFLAGS) $(CGLM_CFLAGS) $(CFLAGS) -o $@

clean:
	rm $(OBJECTS)
	$(LIBTOOL) --mode=clean rm -f $(LTOBJS) $(LGLM_LIB)

.PHONY: all clean $(LGLM_LIB)
